<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.dahanne.banq.notifications"
          android:versionCode="3"
          android:versionName="1.2">

    <uses-sdk
            android:minSdkVersion="10"
            android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="net.dahanne.banq.notifications.MainActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="net.dahanne.banq.notifications.LoginActivity"
                android:windowSoftInputMode="adjustResize|stateVisible">
        </activity>
        <activity android:name=".PreferencesActivity"/>

        <service
                android:name=".AuthenticationService"
                android:exported="true">
            <intent-filter>
                <action
                        android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                    android:name="android.accounts.AccountAuthenticator"
                    android:resource="@xml/authenticator"/>
        </service>
        <service
                android:name=".SyncService"
                android:exported="true">
            <intent-filter>
                <action
                        android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data
                    android:name="android.content.SyncAdapter"
                    android:resource="@xml/syncadapter"/>
        </service>
        <provider
                android:name=".StubProvider"
                android:authorities="net.dahanne.banq.notifications.stubprovider"
                android:syncable="true"/>
    </application>

</manifest>
